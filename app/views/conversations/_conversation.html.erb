<li>
  <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
    <div class="panel-heading">
      <span class="mdl-chip mdl-chip--contact mdl-chip--deletable toggle-window">
        <img class="mdl-chip__contact" src="<%= conversation.opposed_user(user).picture %>">
        <span class="mdl-chip__text"><%= conversation.opposed_user(user).user_name %></span>
        <%= link_to content_tag(:i, "cancel", class: "material-icons"), close_conversation_path(conversation), class: "mdl-chip__action", remote: true, method: :post %>
      </span>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="messages-list">
        <ul>
          <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>
      <form class="new_message">
        <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
        <input name="account_id" type="hidden" value="<%= user.id %>">
        <div class="mdl-textfield mdl-js-textfield divChatInput">
          <textarea placeholder="Chatea aquÃ­.." class="form-control mdl-textfield__input" type="text" rows= "2" name="body" ></textarea>
        </div>
        <input type="submit" class="mdl-button mdl-button--raised btnSendChat" value="Enviar">
        <hr class="hrNoMargin hrChat">
      </form>
    </div>
  </div>
</li>
