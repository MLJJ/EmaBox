<h2>Editar perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="contentUpload">
    <div class="contentImgUpload"><img id="imgPerfil" src="<%= current_account.picture %>"/></div>
    <div class="input__row uploader">
      <label for="account_picture"></label>
      <%= f.file_field :picture, class: "upload", id: "account_picture" %>
    </div>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txtFieldForm">
    <%= f.label :full_name, "Nombre completo:", class: "mdl-textfield__label" %>
    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "mdl-textfield__input required" %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txtFieldForm">
    <%= f.label :user_name, "Nombre de usuario:", class: "mdl-textfield__label" %>
    <%= f.text_field :user_name, autocomplete: "full_name", class: "mdl-textfield__input required" %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txtFieldForm">
    <%= f.label :email, "Correo:", class: "mdl-textfield__label" %>
    <%= f.email_field :email, autocomplete: "email", class: "mdl-textfield__input required"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label labelContrasena txtFieldForm">
    <%= f.label :password, "Contraseña:", class: "mdl-textfield__label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "mdl-textfield__input" %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txtFieldForm">
    <%= f.label :password_confirmation, "Confirmar contraseña:", class: "mdl-textfield__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mdl-textfield__input" %>
  </div>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txtFieldForm">
    <%= f.label :current_password, "Contraseña actual:", class: "mdl-textfield__label" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "mdl-textfield__input required" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar cambios", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
  </div>
<% end %>

<script>
    new DeviseRegistrationsNewView();
</script>
