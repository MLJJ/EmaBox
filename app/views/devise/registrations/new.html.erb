<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--1-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
  <div class="mdl-cell mdl-cell--10-col mdl-cell--4-col-phone mdl-cell--6-col-tablet">
    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--3-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
      <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-phone mdl-cell--6-col-tablet">
        <h3 class="h3IniciarSesion">Registrarse</h3>
        <div class="boxLogin">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="contentUpload">
              <div class="contentImgUpload"><img id="imgPerfil"/></div>
              <div class="input__row uploader">
                <label for="account_picture"></label>
                <%= f.file_field :picture, class: "upload", id: "account_picture" %>
              </div>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :full_name, "Nombre completo:", class: "mdl-textfield__label" %>
              <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "mdl-textfield__input required" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :user_name, "Nombre de usuario:", class: "mdl-textfield__label" %>
              <%= f.text_field :user_name, autocomplete: "full_name", class: "mdl-textfield__input required" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, "Correo:", class: "mdl-textfield__label" %>
              <%= f.email_field :email, autocomplete: "email", class: "mdl-textfield__input required" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label labelContrasena">
              <%= f.label :password, "Contraseña:", class: "mdl-textfield__label" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "mdl-textfield__input required" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password_confirmation, "Confirmar contraseña:", class: "mdl-textfield__label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mdl-textfield__input" %>
            </div>

            <div class="actions">
              <%= f.submit "Registrarse", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="mdl-cell mdl-cell--3-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--1-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
</div>
<script>
  new DeviseRegistrationsNewView();
</script>
