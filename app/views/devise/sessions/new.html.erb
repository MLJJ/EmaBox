<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--1-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
  <div class="mdl-cell mdl-cell--10-col mdl-cell--4-col-phone mdl-cell--6-col-tablet">
    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--3-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
      <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-phone mdl-cell--6-col-tablet">
        <h3 class="h3-title-login">Iniciar sesión</h3>
        <div class="boxLogin">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :email, "Correo:", class: "mdl-textfield__label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mdl-textfield__input required" %>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
              <%= f.label :password, "Contraseña:", class: "mdl-textfield__label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "mdl-textfield__input required"%>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Recordarme" %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Entrar", class: "mdl-button mdl-js-button mdl-button--raised" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="mdl-cell mdl-cell--3-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--1-col mdl-layout--large-screen-only mdl-cell--1-col-tablet"></div>
</div>